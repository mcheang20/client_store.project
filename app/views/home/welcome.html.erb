<% provide(:nav_style, "transparent-nav") %>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img style="width:1500px; height:700px;" src="https://pixabay.com/get/e03cb4092af01c22d2524518a33219c8b66ae3d111b7184794f6c87f/hats-995624_1280.jpg">
      <div class="carousel-caption" id="carousel-item-one">
         <h1>Welcome to Adroit</h1>
         <%= link_to "Shop Now", "#", class: 'btn' %>
       </div>
   </div>
   <div class="item">
      <img style="width:1500px; height:700px;" src="https://pixabay.com/get/e831b00f20f6023ed1534705fb094293e777e1d018ac10459df6c87fa3edb4bf/bag-1410823_1920.jpg">
      <div class="carousel-caption" id="carousel-item">
        <h1>Log Your Adventures</h1>
        <%= link_to "Shop Now", category_path(2), class: 'btn' %>
      </div>
    </div>
    <div class="item">
       <img style="width:1500px; height:700px;" src="https://pixabay.com/get/ed37b30828f21c22d2524518a3484392e374e7d404b0154992f0c07dafecb1/woman-422706_1280.jpg">
       <div class="carousel-caption" id="carousel-item">
         <h1>Explore the World</h1>
         <%= link_to "Shop Now", product_path(19), class: 'btn' %>
       </div>
     </div>
     <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
       <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
       <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
       <span class="sr-only">Next</span>
     </a>
   </div>
</div>

<section class="feature-item">
  <img src="https://static1.squarespace.com/static/57e557ab9de4bb765144cdf5/57e92aa5be6594ead4a5eaa6/58519a1abebafb0499f4c1c0/1481742884184/PUP+Twitter+Header+02.png?format=1500w">
  <div id="feature-cap">
    <p>Featured Item Power Pin Ups</p>
    <%= link_to "Shop Now", "#", class: 'btn' %>
  </div>
</section>

<section class="featured container">
  <h1>On Sale Now</h1>
  <% @products.take(3).each do |product| %>
    <div class="thumbnail-info col-sm-4">
      <%= link_to image_tag(product.image.url(:medium)), product_path(product) %>
      <p><%= product.name %></p>
    </div>
  <% end %>
</section>

<section class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <div class="feature-image">
        <%= link_to image_tag("https://pixabay.com/get/ea36b7092bf11c22d9584518a3484392e374e7d404b0154993f9c77aa5ecb4/gadgets-336635_1920.jpg"), category_path(2) %>
        <span class="image-caption" style="color:white;">Accessories</span>
      </div>
      <div class="feature-image">
        <%= link_to image_tag("https://pixabay.com/get/e03db50c21fd1c22d9584518a3484392e374e7d404b0154992f0c07da4ebbc/home-984399_1920.jpg"), category_path(1) %>
        <span class="image-caption" style="color:white;">Apparel</span>
      </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
      <div class="feature-image-collection">
        <%= link_to image_tag("http://cdn.iphonephotographyschool.com/wp-content/uploads/Balog.jpg"), "#" %>
        <span class="image-caption" id="cap" style="color:white;">Collection</span>
      </div>
    </div>
  </div>
</section>

