<div class="container" style="margin-bottom: 400px;">
<h1>Add an item</h1>
  <%= form_for @product, html: { multipart: true } do |f| %>
    <div class="form-all form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Product Name", required: true  %>
    </div>

    <div class="form-all form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control', placeholder: "Price", required: true %>
    </div>

    <div class="form-all form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Item Description", required: true %>
    </div>

    <div class="form-all form-group">
      <%= f.label "Select a category for this item" %>
      <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category", required: true) %>
    </div>

    <div class=" form-all form-group">
      <%= f.label "Add a thumbnail" %>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
