<!DOCTYPE html>
<html>
<head>
  <title>Shoppelyft</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar-top">
      <li><%= link_to image_tag("logo.png"), root_path %></li>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Products", products_path %></li>
      <% if current_user.present? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'pull-right' %>
      <% end %>
      <% if @cart.present? %>
        <li class="cart-btn pull-right"><i class="fa fa-shopping-cart fa-lg"></i> <%= link_to "Cart(#{@cart.products.count})" , cart_path(@cart)%></li>
      <% else %>
        <li class="cart-btn pull-right"><i class="fa fa-shopping-cart fa-lg"></i><%= link_to "Cart" , carts_path %></li>
      <% end %>
  </nav>
  <% if flash[:notice] %>
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:error] %>
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert-wrapper">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>

<%= yield %>

</body>
</html>
